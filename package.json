{
  "name": "mira-kit",
  "version": "0.0.0",
  "private": true,
  "workspaces": ["packages/*"],
  "main": "index.js",
  "repository": "git@github.com:mirainc/mira-kit.git",
  "scripts": {
    "lint": "eslint .",
    "precommit": "lint-staged",
    "bootstrap": "lerna bootstrap",
    "build-docs": "gitbook build",
    "serve-docs": "gitbook serve"
  },
  "devDependencies": {
    "@babel/core": "7.0.0-beta.42",
    "@babel/runtime": "7.0.0-beta.42",
    "babel-eslint": "8.2.2",
    "babel-preset-react-app": "next",
    "eslint": "4.15.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-react-app": "^2.1.0",
    "eslint-loader": "1.9.0",
    "eslint-plugin-flowtype": "2.41.0",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "7.5.1",
    "gitbook-cli": "^2.3.2",
    "husky": "^0.14.3",
    "lerna": "^2.9.0",
    "lint-staged": "^7.0.0",
    "prettier": "1.11.1"
  },
  "lint-staged": {
    "*.{js,json,css,md}": ["prettier --write", "git add"]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "babel": {
    "presets": ["react-app"]
  },
  "env": {
    "browser": true,
    "jest": true
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": ["react-app", "prettier"],
    "plugins": ["prettier"]
  }
}
