{
  "name": "mira-kit",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/create-mira-app",
    "packages/mira-kit",
    "packages/mira-scripts",
    "packages/mira-simulator"
  ],
  "main": "index.js",
  "repository": "git@github.com:mirainc/mira-kit.git",
  "scripts": {
    "lint": "eslint .",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "@babel/core": "7.0.0-beta.41",
    "@babel/runtime": "7.0.0-beta.41",
    "babel-eslint": "^7.2.3",
    "babel-preset-react-app": "^3.1.0",
    "eslint": "3.19.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-react-app": "^1.0.5",
    "eslint-loader": "1.8.0",
    "eslint-plugin-flowtype": "2.34.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "5.0.3",
    "eslint-plugin-react": "7.1.0",
    "husky": "^0.14.3",
    "lerna": "^2.9.0",
    "lint-staged": "^7.0.0",
    "prettier": "1.11.1"
  },
  "lint-staged": {
    "*.{js,json,css,md}": ["prettier --write", "git add"]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "babel": {
    "presets": ["react-app"]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": ["react-app", "prettier"],
    "plugins": ["prettier"]
  },
  "eslintIgnore": ["**/node_modules/*", "**/build/*", "**/lib/*"],
  "env": {
    "browser": true,
    "jest": true
  },
  "dependencies": {
    "cross-spawn": "^6.0.5"
  }
}
