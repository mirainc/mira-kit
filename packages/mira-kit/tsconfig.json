{
  "compilerOptions": {
    "outDir": "./lib",
    "jsx": "react",
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": false,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "src/setupTests.ts",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
