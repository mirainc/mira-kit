    "@types/react-dom": "^16.0.7",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eventemitter3": "^3.0.1",
    "jest": "^22.4.2",
    "react-test-renderer": "^16.4.0",
    "ts-jest": "^23.1.3",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
